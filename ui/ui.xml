<html>
  <head>
    <title>{{{filename}}}</title>
    <link href="resources/css/reset.css" rel="stylesheet" type="text/css" />
    <link href="resources/css/960.css" rel="stylesheet" type="text/css" />
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.8.2/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />
    <link href="resources/css/jquery-ui-1.8.21.custom.css" rel="stylesheet" type="text/css" />
    <link href="resources/fa/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="resources/css/kif.css" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.8.2/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/0.7.0/mustache.min.js" type="text/javascript"></script>
    <script src="resources/js/jquery.tooltip.min.js" type="text/javascript"></script>
    <script src="resources/js/json2.js" type="text/javascript"></script>
    <script src="resources/js/kif.js" type="text/javascript"></script>
  </head>

  <body>
    <span id="ticket-info" style="display: none">
      <div id="ticket-info-map">{{{ticket-info-json}}}</div>
    </span>

    <div id="menu">
      <ul>
        <li>
          <div id="logo-container">
            <img id="logo" src="resources/img/cyverse-logo-small.png">
          </div>
        </li>
        <li>
          <div>
            <h1 id="filename" title="{{{filename}}}">{{{filename}}}</h1>
          </div>
        </li>
        <li>
          <div id="menu-download-button-display">
            <a href="d/{{ticket-id}}/{{filename}}">
              <div id="download-link-area"><i class="fa fa-download"></i></div>
            </a>
          </div>
        </li>
      </ul>
    </div>

    <div class="container_12" id="page-wrapper">
      <div id="download">
        <a name="download-section"></a>

        <div id="download-header" class="grid_12">
          <h2>Download</h2>
        </div>

        <div id="download-button-display" class="grid_12">
          <a href="d/{{ticket-id}}/{{filename}}">
            <div id="download-button-action">
              <i class="fa fa-download fa-5x"></i>
            </div>
          </a>
        </div>

        <div class="section-spacer" class="grid_12"></div>
      </div>

      <div id="details">
        <a name="details-section"></a>

        <div id="details-header" class="grid_12">
          <h2>File Details</h2>
        </div>

        <div id="lastmod-detail">
          <div id="lastmod-label" class="grid_3">
            <p>Last Modified:</p>
          </div>

          <div id="lastmod" class="grid_9">
            {{{lastmod}}}
          </div>
        </div>

        <div id="size-detail">
          <div id="size-label" class="grid_3">
            <p>File Size:</p>
          </div>

          <div id="size" class="grid_9">
            {{{filesize}}}
          </div>
        </div>

        <div class="section-spacer"></div>
      </div>

      <div id="alt-downloads">
        <div id="alt-downloads-header" class="grid_12">
          <h2>Alternative Download Methods</h2>
        </div>

        <div id="de-import-instructions">
          <div id="de-import-instructions-label" class="grid_3">
            <h2 title="Discovery Environment Import URL">
              <a href="{{{de-url}}}">DE Import URL:</a>
            </h2>
          </div>

          <input id="de-import-url" type="text" readonly="false" class="grid_7" value>
          <div id="clippy-import-wrapper" class="grid_2">
            <i class="fa fa-files-o"></i>
          </div>
        </div>

        <div id="irods-instructions">
          <div id="irods-instructions-label" class="grid_3">
            <h2 title="IRODS icommands">
              <a href="{{{irods-url}}}">iRODS icommands:</a>
            </h2>
          </div>

          <div id="clippy-irods-instructions">
            <input id="irods-command-line" type="text" readonly="false" class="grid_7" value>
            <div id="clippy-irods-wrapper" class="grid_2">
              <i class="fa fa-files-o"></i>
            </div>
          </div>
        </div>

        <div id="wget-instructions">
          <div id="wget-instructions-label" class="grid_3">
            <p>Wget:</p>
          </div>

          <div id="clippy-wget-instructions">
            <input id="wget-command-line" type="text" readonly="false" class="grid_7" value>
            <div id="clippy-wget-wrapper" class="grid_2">
              <i class="fa fa-files-o"></i>
            </div>
          </div>
        </div>

        <div id="curl-instructions">
          <div id="curl-instructions-label" class="grid_3">
            <p>cURL:</p>
          </div>

          <div id="clippy-curl-instructions">
            <input id="curl-command-line" type="text" readonly="false" class="grid_7" value>
            <div id="clippy-curl-wrapper" class="grid_2">
              <i class="fa fa-files-o"></i>
            </div>
          </div>
        </div>

        <div class="section-spacer"></div>
      </div>

      <div id="irods-avus">
        <div id="irods-avus-header" class="grid_12">
          <h2>Metadata</h2>
        </div>

        <table id="irods-avus-data">
          <thead>
            <tr>
              <th>Attribute</th>
              <th>Value</th>
              <th>Unit</th>
            </tr>
          </thead>
          <tbody>
          {{#metadata}}
            <tr>
              <td title="{{attr}}">{{attr}}</td>
              <td title="{{value}}">{{value}}</td>
              <td title="{{unit}}">{{unit}}</td>
            </tr>
          {{/metadata}}
          </tbody>
        </table>

        <div class="section-spacer"></div>
      </div>

      <div id="footer">
        <p>
          CyVerse is funded by a grant from the National Science Foundation Plant Science Cyberinfrastructure Collaborative (#DBI-0735191, #DBI-1265383).
        </p>
      </div>
    </div>
  </body>
</html>
